<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:PagerSlidingTabStrip="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yl.yiliao.fragment.TranslateFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/top_bg" />

    <com.yl.yiliao.widget.TabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        PagerSlidingTabStrip:pstsDividerColor="@color/transparent_color"
        PagerSlidingTabStrip:pstsIndicatorColor="@color/transparent_color"
        PagerSlidingTabStrip:pstsIndicatorHeight="1dp"
        PagerSlidingTabStrip:pstsIndicatorPadding="70dp"
        PagerSlidingTabStrip:pstsShouldExpand="true"
        PagerSlidingTabStrip:pstsUnderlineHeight="1dp" />

    <ImageView
        android:id="@+id/translate_iv"
        android:layout_width="22dp"
        android:layout_height="8dp"
        android:layout_alignBottom="@+id/tabs"
        android:layout_marginBottom="-1dp"
        android:src="@drawable/translate_icon" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabs" />

</RelativeLayout>
