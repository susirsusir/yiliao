<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yl.yiliao.activity.MainActivity">


    <FrameLayout
        android:id="@+id/main_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_line"
        android:orientation="vertical" />


    <View
        android:id="@+id/main_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/main_menu"
        android:background="@color/item_line_bg" />
    <LinearLayout
        android:id="@+id/main_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home_bottom_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_home_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_home_img"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_translate_sel" />

            <TextView
                android:id="@+id/main_home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/height_three"
                android:gravity="center"
                android:text="@string/main_tab_translate"
                android:textColor="@color/main_tab_select_bg"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_message_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_message_img"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_message" />

            <TextView
                android:id="@+id/main_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/height_three"
                android:gravity="center"
                android:text="@string/main_tab_message"
                android:textColor="@color/main_tab_bg"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_friends_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_friends_img"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_friends" />


            <TextView
                android:id="@+id/main_friends_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/height_three"
                android:gravity="center"
                android:text="@string/main_tab_friends"
                android:textColor="@color/main_tab_bg"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_me_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_mian_img"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_mine" />

            <TextView
                android:id="@+id/main_mian_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/height_three"
                android:gravity="center"
                android:text="@string/main_tab_mine"
                android:textColor="@color/main_tab_bg"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
